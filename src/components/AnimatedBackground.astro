<div class="fixed inset-0 pointer-events-none overflow-hidden z-0" aria-hidden="true">
  <div class="floating-shapes">
    <div class="shape shape-1"></div>
    <div class="shape shape-2"></div>
    <div class="shape shape-3"></div>
    <div class="shape shape-4"></div>
    <div class="shape shape-5"></div>
  </div>
</div>

<style>
  .floating-shapes {
    position: absolute;
    width: 100%;
    height: 100%;
  }

  .shape {
    position: absolute;
    border: 2px solid rgba(0, 0, 0, 0.1);
    animation: float 20s infinite ease-in-out;
  }

  .shape-1 {
    width: 80px;
    height: 80px;
    background: rgba(150, 199, 242, 0.1);
    border-radius: 50%;
    top: 10%;
    left: 10%;
    animation-delay: 0s;
  }

  .shape-2 {
    width: 60px;
    height: 60px;
    background: rgba(173, 242, 150, 0.1);
    border-radius: 8px;
    top: 60%;
    right: 15%;
    animation-delay: 2s;
  }

  .shape-3 {
    width: 100px;
    height: 100px;
    background: rgba(243, 150, 229, 0.1);
    transform: rotate(45deg);
    top: 80%;
    left: 20%;
    animation-delay: 4s;
  }

  .shape-4 {
    width: 70px;
    height: 70px;
    background: rgba(242, 207, 150, 0.1);
    border-radius: 16px;
    top: 30%;
    right: 25%;
    animation-delay: 1s;
  }

  .shape-5 {
    width: 90px;
    height: 90px;
    background: rgba(157, 133, 154, 0.1);
    clip-path: polygon(50% 0%, 100% 100%, 0% 100%);
    top: 50%;
    left: 5%;
    animation-delay: 3s;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0) rotate(0deg);
    }
    25% {
      transform: translateY(-30px) rotate(5deg);
    }
    50% {
      transform: translateY(-60px) rotate(-5deg);
    }
    75% {
      transform: translateY(-30px) rotate(3deg);
    }
  }
</style>
