---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{webp,jpg,png,gif}"
);
---

<section class="py-20 flex md:flex-row flex-col px-4 md:px-0 gap-10 md:gap-0">
  <div class="flex flex-col gap-6 justify-start items-start md:w-1/2 reveal-on-scroll opacity-0" style="transform: translateY(30px);">
    <h1 class="text-pblack">Hi, my name is Temirlan Dzhoroev</h1>
    <p class="text-6xl font-bold">Frontend Engineer specializing in 3D & AI</p>
    <p>
      I build highly interactive, AI-powered user experiences using React, Next.js, and Three.js/WebGL.
      At Redbrick, I've led development of AI-powered game creation systems and 3D Studio Engine,
      combining strong UI/UX foundations with cutting-edge AI functionality including RAG, LangChain,
      and vector databases.
    </p>
    <a
      href="/about"
      class="bg-pgreen px-8 py-4 text-xl font-bold border-2 border-black rounded-xl shadow-card hover:shadow-hover transition hover:scale-110 hover:-rotate-1"
    >
      About me
    </a>
  </div>
  <div
    class="md:w-1/2 object-contain flex items-center justify-center p-10 group reveal-on-scroll opacity-0 parallax"
    data-speed="0.3"
    style="transform: translateY(30px);"
  >
    <a
      href="/about"
    >
      <div
        class="bg-pblue border-3 border-black rounded-2xl h-64 w-72 shadow-card group-hover:shadow-hover flex transition relative hover:rotate-1"
      >
        <div
          class="absolute -top-8 -left-12 text-5xl bg-ppink px-5 py-1 z-10 shadow-card group-hover:shadow-hover transition rounded-t-2xl border-3 border-black rounded-bl-2xl rounded-br-sm parallax float-1"
          data-speed="0.1"
        >
          <Icon name="1" />
        </div>
        <div
          class="absolute top-16 -right-16 text-5xl bg-pyellow p-2 z-10 shadow-card group-hover:shadow-hover transition rounded-full border-3 border-black parallax float-2"
          data-speed="0.2"
        >
          <Icon name="2" />
        </div>
        <div
          class="absolute text-nowrap flex items-center gap-4 -bottom-12 right-0 pr-4 bg-pgreen pl-1 z-10 shadow-card1 group-hover:shadow-card transition rounded-full border-3 border-black parallax float-3"
          data-speed="0.15"
        >
          <Icon name="3" />
          <p>Temirlan Dzhoroev</p>
        </div>
        <div class="h-96 w-72 overflow-hidden relative -mt-30 rounded-2xl">
          <Image
            class="object-bottom absolute bottom-0 group-hover:scale-105 transition"
            src={images["/src/assets/tims.png"]()}
            alt="Temirlans photo"
          />
        </div>
      </div></a
    >
  </div>
</section>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }

  .float-1 { animation: float 4s ease-in-out infinite; }
  .float-2 { animation: float 5s ease-in-out infinite; animation-delay: 1s; }
  .float-3 { animation: float 4.5s ease-in-out infinite; animation-delay: 0.5s; }
</style>

