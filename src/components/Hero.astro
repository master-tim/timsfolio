---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import HeroChat from "./HeroChat.astro";

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{webp,jpg,png,gif}"
);
---

<section class="py-10 md:py-16 flex flex-col items-center justify-center min-h-[80vh] relative px-4">

  <!-- The Chat Console -->
  <div class="w-full max-w-5xl relative z-20 perspective-1000 reveal-on-scroll opacity-0" style="transform: translateY(40px); transition-delay: 0.2s;">
     <!-- Decorative elements behind chat -->
     <div class="absolute -inset-6 bg-gradient-to-r from-pblue/25 via-white to-ppink/25 rounded-[28px] blur-2xl -z-10"></div>
     
     <HeroChat />
     

  </div>
</section>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }

  .float-1 { animation: float 4s ease-in-out infinite; }
  .float-2 { animation: float 5s ease-in-out infinite; animation-delay: 1s; }
  .float-3 { animation: float 4.5s ease-in-out infinite; animation-delay: 0.5s; }
</style>
