---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import HeroChat from "./HeroChat.astro";

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{webp,jpg,png,gif}"
);
---

<section class="py-10 md:py-20 flex flex-col items-center justify-center min-h-[80vh] relative px-4">
  
  <!-- Main Content Wrapper -->
  <div class="text-center mb-12 max-w-4xl relative z-10 reveal-on-scroll opacity-0" style="transform: translateY(20px);">
    <div class="inline-flex items-center gap-2 mb-6 px-4 py-2 rounded-full border-2 border-black bg-white shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:translate-y-[-2px] transition-transform cursor-default">
       <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></span>
       <span class="font-mono font-bold text-sm">SYSTEM ONLINE</span>
    </div>
    
    <h1 class="text-5xl md:text-7xl font-black mb-6 leading-tight text-pblack">
      I'm <span class="text-pblue relative inline-block">
        Temirlan
        <svg class="absolute w-full h-3 -bottom-1 left-0 text-pblue opacity-30" viewBox="0 0 100 10" preserveAspectRatio="none">
          <path d="M0 5 Q 50 10 100 5" stroke="currentColor" stroke-width="8" fill="none" />
        </svg>
      </span>.
      <br />
      <span class="text-transparent bg-clip-text bg-gradient-to-r from-ppink via-purple-500 to-pyellow drop-shadow-sm">
        I Build AI & 3D Web Experiences.
      </span>
    </h1>
    
    <p class="text-xl md:text-2xl text-pblack/80 font-medium max-w-2xl mx-auto leading-relaxed">
      Don't just read about me. <span class="bg-pgreen/30 px-2 py-1 rounded border border-black/10 font-bold">Ask my AI agent</span> to explore my projects and skills.
    </p>
  </div>

  <!-- The Chat Console -->
  <div class="w-full max-w-4xl relative z-20 perspective-1000 reveal-on-scroll opacity-0" style="transform: translateY(40px); transition-delay: 0.2s;">
     <!-- Decorative elements behind chat -->
     <div class="absolute -inset-4 bg-gradient-to-r from-pblue/20 to-ppink/20 rounded-3xl blur-xl -z-10"></div>
     
     <HeroChat />
     

  </div>
</section>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }

  .float-1 { animation: float 4s ease-in-out infinite; }
  .float-2 { animation: float 5s ease-in-out infinite; animation-delay: 1s; }
  .float-3 { animation: float 4.5s ease-in-out infinite; animation-delay: 0.5s; }
</style>

