---
import HeroChat from "./HeroChat.astro";
---

<section class="py-12 md:py-20 flex flex-col items-center justify-center min-h-[70vh] relative px-4 overflow-hidden">
  
  <!-- Background Elements (Subtle) -->
  <div class="absolute top-0 left-0 w-full h-full overflow-hidden -z-10 pointer-events-none">
    <div class="absolute top-[-10%] right-[-5%] w-[300px] md:w-[500px] h-[300px] md:h-[500px] bg-pblue/10 rounded-full blur-3xl opacity-60"></div>
    <div class="absolute bottom-[-10%] left-[-5%] w-[300px] md:w-[500px] h-[300px] md:h-[500px] bg-ppink/10 rounded-full blur-3xl opacity-60"></div>
  </div>

  <!-- The Chat Console -->
  <div class="w-full max-w-5xl relative z-20 reveal-on-scroll">
     <HeroChat />
  </div>
  
</section>
