<style>
  .floating-action-button {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    z-index: 1000;
  }

  .fab-main {
    width: 64px;
    height: 64px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  }

  .fab-icon {
    font-size: 32px;
    font-weight: bold;
    transition: transform 0.3s ease;
  }

  .fab-main:hover .fab-icon,
  .fab-main.active .fab-icon {
    transform: rotate(45deg);
  }

  .fab-menu {
    position: absolute;
    bottom: 80px;
    right: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
    opacity: 0;
    pointer-events: none;
    transition: all 0.3s ease;
  }

  .floating-action-button:hover .fab-menu,
  .floating-action-button .fab-main.active ~ .fab-menu {
    opacity: 1;
    pointer-events: all;
  }

  .fab-action {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    text-decoration: none;
    transform: scale(0);
    transition: all 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  }

  .floating-action-button:hover .fab-action:nth-child(1),
  .fab-main.active ~ .fab-menu .fab-action:nth-child(1) {
    transform: scale(1);
    transition-delay: 0.1s;
  }

  .floating-action-button:hover .fab-action:nth-child(2),
  .fab-main.active ~ .fab-menu .fab-action:nth-child(2) {
    transform: scale(1);
    transition-delay: 0.15s;
  }

  .floating-action-button:hover .fab-action:nth-child(3),
  .fab-main.active ~ .fab-menu .fab-action:nth-child(3) {
    transform: scale(1);
    transition-delay: 0.2s;
  }

  .fab-action:hover {
    transform: scale(1.1) rotate(-5deg);
  }

  @media (max-width: 768px) {
    .floating-action-button {
      bottom: 1rem;
      right: 1rem;
    }
    
    .fab-main {
      width: 56px;
      height: 56px;
    }
  }
</style>

<script is:inline>
  function initFAB() {
    const fabMain = document.querySelector('.fab-main');
    if (fabMain) {
      fabMain.addEventListener('click', () => {
        fabMain.classList.toggle('active');
      });
    }
  }
  initFAB();
  document.addEventListener('astro:after-swap', initFAB);
</script>
