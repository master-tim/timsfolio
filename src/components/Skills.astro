---
const skills = [
  { name: "React", category: "frontend", color: "pblue" },
  { name: "Next.js", category: "frontend", color: "pblue" },
  { name: "Three.js", category: "3d", color: "ppink" },
  { name: "WebGL", category: "3d", color: "ppink" },
  { name: "TypeScript", category: "language", color: "pyellow" },
  { name: "JavaScript", category: "language", color: "pyellow" },
  { name: "LangChain", category: "ai", color: "pgreen" },
  { name: "RAG", category: "ai", color: "pgreen" },
  { name: "Vector DB", category: "ai", color: "pgreen" },
  { name: "Tailwind CSS", category: "frontend", color: "pblue" },
  { name: "Node.js", category: "backend", color: "pyellow" },
  { name: "Astro", category: "frontend", color: "pblue" },
];
---

<section class="py-20 reveal-on-scroll opacity-0">
  <div class="text-center mb-12">
    <p class="text-pblack mb-2">Technologies I work with</p>
    <h2 class="text-4xl font-bold">My Tech Stack</h2>
  </div>
  
  <div class="flex flex-wrap justify-center gap-4 max-w-4xl mx-auto">
    {skills.map((skill, index) => (
      <div 
        class={`skill-tag bg-${skill.color} px-6 py-3 border-2 border-black rounded-full shadow-card hover:shadow-hover transition-all cursor-pointer hover:scale-110 hover:rotate-2`}
        style={`animation-delay: ${index * 0.1}s`}
      >
        <span class="font-semibold text-lg">{skill.name}</span>
      </div>
    ))}
  </div>
</section>

<style>
  .skill-tag {
    animation: slideInUp 0.6s ease-out forwards;
    opacity: 0;
  }

  @keyframes slideInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .skill-tag:hover {
    transform: translateY(-5px) rotate(-2deg);
  }
</style>
